<div class="main">
	<h4>Balance Sheet</h4>
	<table>
		<thead>
		<tr>
		    <th>Account</th>
		    <th>Amount</th> 
		    <th></th>
		    <th>Account</th>
		    <th>Amount</th> 
		</tr>
		</thead>
		<% for(var i=0; i<items.length; i++) {%>
	  		<tr>
			    <td><%= items[i]['account_name'] %></td>
			    <td><%= items[i]['bal'] %></td>
			    <td></td>
			    <td><%= items[i]['account_name1'] %></td>
			    <td><%= items[i]['bal1'] %></td>
	  		</tr>
		<% } %>

		<tfoot>
			<tr>
			    <th></th>
			    <th><%= parseFloat(bal).toFixed(2) %></th>
			    <th></th>
			    <th></th>
			    <th><%= parseFloat(bal1).toFixed(2) %></th>
			</tr>
		</tfoot>
	</table>

	
</div>
